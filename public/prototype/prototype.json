{
	"components": {
		"ToolBar": {
			"class": "Container",
			"props": {
				"className": "toolbar",
				"sizeToFitContents": false,
				"style": {
					"height": 60,
					"paddingLeft": 16,
					"paddingRight": 16
				}
			},
			"children": [
				{
					"class": "ChildrenPlaceholder"
				}
			]
		},
		"Button": {
			"class": "Container",
			"props": {
				"className": "button",
				"style": {
					"height": 40,
					"paddingLeft": 16,
					"paddingRight": 16
				}
			},
			"children": [
				{
					"class": "Text",
					"props": {
						"style": {
							"color": "#4788B2"
						},
						"children": [
							{
								"class": "ChildrenPlaceholder"
							}
						]
					}
				},
				{
					"class": "FixedSpace",
					"props": {
						"size": 16
					}
				},
				{
					"class": "Vector",
					"props": {
						"source": "icon.svg",
						"style": {
							"width": 12,
							"height": 12
						}
					}
				}
			]
		}
	},
	"layers": [
		{
			"class": "Container",
			"props": {
				"orientation": "column",
				"style": {
					"width": "100%",
					"height": "100%"
				},
				"children": [
					{
						"class": "ToolBar",
						"props": {
							"children": [
								{
									"class": "Text",
									"props": {
										"style": {
											"color": "#B8B8B8"
										},
										"children": [
											"Preview"
										]
									}
								},
								{
									"class": "FlexibleSpace"
								},
								{
									"class": "Layer",
									"props": {
										"style": {
											"left": 0,
											"right": 0,
											"top": 0,
											"bottom": 0,
											"backgroundColor": "#292929"
										}
									}
								},
								{
									"class": "Container",
									"props": {
										"style": {
											"height": 40,
											"paddingLeft": 16,
											"paddingRight": 16
										},
										"children": [
											{
												"class": "Text",
												"props": {
													"style": {
														"color": "#4788B2"
													},
													"children": [
														"Add Configuration"
													]
												}
											},
											{
												"class": "FixedSpace",
												"props": {
													"size": 16
												}
											},
											{
												"class": "Vector",
												"props": {
													"source": "icon.svg",
													"style": {
														"width": 12,
														"height": 12
													}
												}
											}
										]
									}
								}
							]
						}
					},
					{
						"class": "Container",
						"props": {
							"sizeToFitContents": false,
							"children": [
								{
									"class": "Layer",
									"props": {
										"style": {
											"left": 0,
											"right": 0,
											"top": 0,
											"bottom": 0,
											"backgroundColor": "#1F1F1F"
										}
									}
								},
								{
									"class": "Bitmap",
									"props": {
										"source": "https://c1.staticflickr.com/5/4218/35222146015_be1554effa_n.jpg",
										"style": {
											"alignSelf": "center"
										}
									}
								}
							]
						}
					}
				]
			}
		}
	]
}
